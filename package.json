{
  "name": "samstodin-subs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack --port 3050",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write --ignore-path .gitignore .",
    "lint": "oxlint && eslint .",
    "tsc": "tsc --pretty --project ./tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/",
    "knip": "knip",
    "db:generate": "dotenvx run -f .env.local -- drizzle-kit generate",
    "db:migrate": "dotenvx run -f .env.local -- drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "tunnel": "cloudflared tunnel --config ~/.cloudflared/samstodin-subs.yaml run --protocol http2"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@oslojs/encoding": "^1.1.0",
    "@oslojs/jwt": "^0.3.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@shopify/react-form": "^2.7.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.10",
    "@uploadthing/react": "^7.3.2",
    "@zodios/core": "^10.9.6",
    "arctic": "^3.7.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.43.1",
    "iron-session": "^8.0.4",
    "is-kennitala": "^1.1.0",
    "neverthrow": "^8.2.0",
    "next": "15.3.2",
    "nodemailer": "^7.0.3",
    "react": "19.1.0",
    "react-aria-components": "^1.10.1",
    "react-dom": "19.1.0",
    "uploadthing": "^7.7.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.33",
    "@types/nodemailer": "^6.4.17",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.2",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.2",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-unicorn": "^59.0.1",
    "jest": "^30.0.3",
    "jiti": "^2.4.2",
    "knip": "^5.61.2",
    "oxlint": "^1.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "puppeteer": "^24.10.2",
    "tailwindcss": "^4.1.10",
    "tailwindcss-react-aria-components": "^2.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "tailwindConfig": "tailwind.config.ts",
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "<BUILT_IN_MODULES>",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^~/(.*)$",
      "",
      "^[./]"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.5",
      "@types/react-dom": "19.1.5"
    }
  }
}
